{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "TatamiPolicyForEcrRepository",
            "Effect": "Allow",
            "Action": [
                "ecr:GetDownloadUrlForLayer",
                "ecr:UploadLayerPart",
                "ecr:ListImages",
                "ecr:PutImage",
                "ecr:BatchGetImage",
                "ecr:CompleteLayerUpload",
                "ecr:DescribeImages",
                "ecr:InitiateLayerUpload",
                "ecr:BatchCheckLayerAvailability",
                "ecr:GetRepositoryPolicy"
            ],
            "Resource": [
                "arn:aws:ecr:ap-northeast-1:121659688561:repository/tatami/*",
                "arn:aws:ecr:ap-northeast-1:736134917012:repository/tatami*"
            ]
        },
        {
            "Sid": "TatamiPolicyForAllResources",
            "Effect": "Allow",
            "Action": [
                "ecr:GetAuthorizationToken",
                "ecr:DescribeRepositories"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:List*"
            ],
            "Resource": "arn:aws:s3:::tatami-staging-deploy-config"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:PutObject"
            ],
            "Resource": "arn:aws:s3:::tatami-staging-deploy-config/*"
        }
    ]
}
