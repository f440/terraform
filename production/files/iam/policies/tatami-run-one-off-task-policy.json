{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "ssm:StartSession",
      "Resource": "arn:aws:ssm:ap-northeast-1:736134917012:managed-instance/*"
    },
    {
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": [
        "arn:aws:iam::736134917012:role/service-role/AmazonEC2RunCommandRoleForManagedInstances",
        "arn:aws:iam::736134917012:role/TatamiProductionEcsTaskExecutionRole"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "ssm:DescribeInstanceInformation",
        "ssm:CreateActivation",
        "ssm:DescribeActivations",
        "ssm:DeregisterManagedInstance",
        "ssm:DeleteActivation"
      ],
      "Resource": "*"
    }
  ]
}
